generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:Postgres123@@localhost:5432/kalaam?schema=public"
  // url      = "postgresql://kalaam%3A%20The%20Poetry%20club:pqkYGOEW7ur3@ep-wild-surf-a1fdeawu.ap-southeast-1.aws.neon.tech/kalaam?sslmode=require"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(60)
  email       String       @unique @db.VarChar(100)
  password    String?
  roll_number String       @unique @db.VarChar(9)
  create_at   DateTime     @default(now())
  Post        Post[]
  Club        Membership[]
}

model Membership {
  id        Int      @id @default(autoincrement())
  user_id   Int
  image     String?
  role      String?  @default("Club Member")
  create_at DateTime @default(now())
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade) // user to create a post 
}

// 
model Post {
  id        Int      @id @default(autoincrement())
  user_id   Int
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade) // user to create a post 
  content   String
  image     String
  heading   String
  create_at DateTime @default(now())
}
